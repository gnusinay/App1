<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/title_new_item_text_view"
        android:text="@string/title_new_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/title_new_item_edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/title_new_item_text_view" />

    <TextView
        android:id="@+id/color_new_item_text_view"
        android:text="@string/color_new_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_below="@id/title_new_item_edit_text"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/color_new_item_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_new_item_edit_text"
        android:layout_alignStart="@+id/title_new_item_edit_text"
        android:layout_marginTop="10dp"
         />

    <Button
        android:id="@+id/new_item_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_item_save_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"/>

</RelativeLayout>